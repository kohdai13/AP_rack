<div class="container">
  <div class="row mt-3">
    <div class="col-3">
      <h2 class="offset-2">新規会員登録</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row d-flex justify-content-start mt-3">
        <div class="col-2 m-auto">
          <%= f.label :お名前 %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :name, autofocus: true, placeholder:"例）令和 智子", class: 'form-control' %>
        </div>
        <div class="col-6"></div>

        <div class="col-2 m-auto">
          <%= f.label :ニックネーム %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :nickname, placeholder:"例）ともちん", class: 'form-control' %>
        </div>
        <div class="col-6"></div>

        <div class="col-2 m-auto">
          <%= f.label :自己紹介 %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :introduction, placeholder:"例）服が好きです！よろしくお願いします！", class: 'form-control'  %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-4 mt-2">
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<% @minimum_password_length %>6文字以上)</em>
          <% end %>
        </div>
        <div class="col-4 mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :パスワード（確認用） %><br />
        </div>
        <div class="col-4 mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 mt-2"></div>
        <div class="col-3 mt-2">
          <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>

        <h4 class="mt-3">既に登録済みの方</h4>
        <div><%= link_to "こちら", new_user_session_path, class: 'text-decoration-none' %>からログインしてください</div>
    </div>
  </div>
</div>