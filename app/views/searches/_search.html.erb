<div class="search">
  <h6 class="search-text">ショップ検索</h6>
  <div class="search-form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder:"ショップ名・ブランド・住所を検索", size: "40x40" %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-sm btn-outline-success" %>
    <% end %>
  </div>
</div>