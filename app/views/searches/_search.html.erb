<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="card mt-5 box-shadow">
        <div class="card-header">
          ショップ検索
        </div>
        <table class="card-body">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word, placeholder:"名前・住所・ブランドを入力", class: 'form-control' %>
              <%= f.submit "検索", class: "btn btn-outline-success" %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>