<%= render 'searches/search' %>
<div class="container my-5">
  <h2 class="title-text">お気に入り登録数ランキング</h2>
  <div class="row">
    <% @shop_favorite_ranks.each.with_index(1) do |shop, i| %>
  		<div class="col-3">
  		  第<%= i  %>位
  		  <%= link_to shop_path(shop) do %>
          <%= image_tag shop.shop_image, size: "200x150" %>
        <% end %>
      </div>
      <div class="col-7">
        <table class="table-box-rank">
          <tr>
            <th>ショップ</th>
            <td><%= shop.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= shop.genre %></td>
          </tr>
          <tr>
            <th>ブランド</th>
            <td><%= shop.brand %></td>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= shop.address %></th>
          </tr>
          <tr>
            <th>評価</th>
            <td><%= render "shops/static_rate", shop: shop %></td>
          </tr>
          <tr>
            <th>お気に入り</th>
            <td id="shop_<%= shop.id %>" class="favorite-btn">
              <%= render "favorites/favorite-btn", shop: shop %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>