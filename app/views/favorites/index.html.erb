<div class="container my-5">
  <h2 class="title-text">お気に入り一覧</h2>
  <div class="row">
    <% @shops.each do |shop| %>
      <% if user_signed_in? && Favorite.favorite_method(shop, current_user) %>
    		<div class="col-lg-4 col-md-5 mb-4">
    		  <%= link_to shop_path(shop) do %>
            <%= image_tag shop.shop_image, size: "200x150" %>
          <% end %>
          <table class="table-box">
            <tr>
              <th>ショップ</th>
              <td><%= shop.name %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= shop.genre %></td>
            </tr>
            <tr>
              <th>取扱ブランド</th>
              <td><%= shop.brand %></td>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= shop.address %></th>
            </tr>
            <tr>
              <th>評価</th>
              <td><%= render "shops/static_rate", shop: shop %></td>
            </tr>
          </table>
        </div>
      <% end %>
    <% end %>
    <div class="paginate">
      <%= paginate @shops %>
    </div>
  </div>
</div>