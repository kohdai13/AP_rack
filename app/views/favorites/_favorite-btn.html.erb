<% if shop.favorited_by?(current_user) %>

  <%= link_to shop_favorites_path(shop), method: :delete, remote: true do %>
    <i class="fas fa-star" aria-hidden="true" style="color: orange;"></i>
    <%= shop.favorites.count %> お気に入り
  <% end %>
<% else %>
  <%= link_to shop_favorites_path(shop), method: :post, remote: true do %>
    <i class="fas fa-star" aria-hidden="true"></i>
    <%= shop.favorites.count %> お気に入り
  <% end %>
<% end %>