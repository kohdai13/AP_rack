<div class="container my-5">
  <h2>ショップ一覧</h2>
  <div class="row">
    <% @shops.each do |shop| %>
  		<div class="col-md-3">
  		  <%= link_to shop_path(shop) do %>
          <%= image_tag shop.shop_image, size: "200x150" %>
        <% end %>
      </div>
      <div class="col-md-9">
        <table class="table-box">
          <tr>
            <th>ショップ</th>
            <td><%= shop.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= shop.genre %></td>
          </tr>
          <tr>
            <th>取扱ブランド</th>
            <td><%= shop.brand %></td>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= shop.address %></th>
          </tr>
          <tr>
            <th>評価</th>
            <td><%= render "static_rate", shop: shop %></td>
          </tr>
          <tr>
            <th>お気に入り</th>
            <td><%= render "favorites/btn", shop: shop %></td>
          </tr>
        </table>
      </div>
    <% end %>
    <div>
      <%= paginate @shops %>
    </div>
  </div>
</div>