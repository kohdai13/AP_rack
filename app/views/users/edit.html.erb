<div class="container">
  <div class="row mt-3">
    <div class="col-3">
      <h2 class="offset-2">プロフィール編集</h2>
    </div>
  </div>
  <%= form_with model:@user, local:true do |f| %>
    <div class="row d-flex justify-content-start mt-3">
      <!--プロフィール画像の列-->
      <div class="col-2 mt-2">
        <%= f.label :プロフィール画像, class: 'mt-1' %>
      </div>
      <div class="col-2 mt-2">
        <%= attachment_image_tag @user, :image, :fill, 260, 260, format: "jpg", class: "main-picture user_icon_large" %>
        <%= f.attachment_field :image, id: "image" %>
      </div>
      <div class="col-2 mt-2">
        <i class="fas fa-image image-icon"></i>
        <p class="underline-button">画像の選択</p>
      </div>
      <div class="col-6"></div>

      <!--名前の列-->
      <div class="col-2 mt-2">
        <%= f.label :ニックネーム, class: 'mt-1' %>
      </div>
      <div class="col-2 mt-2">
        <%= f.text_field :nickname, class: "form-control" %>
      </div>
      <div class="col-6"></div>

      <!--メールアドレスの列-->
      <div class="col-2 mt-2">
        <%= f.label :メールアドレス, class: 'mt-1' %>
      </div>
      <div class="col-2 mt-2">
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="col-6"></div>

      <!--自己紹介文の列-->
      <div class="col-2 mt-2">
        <%= f.label :自己紹介文, class 'mt-1' %>
      </div>
      <div class="col-2 mt-2">
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="col-8"></div>

      <!--確認ボタン、退会ボタンの列-->
      <div class="col-2"></div>
      <div class="col-4 mt-2">
        <div class="d-flex bd-highlight mb-3">
          <div class="bd-highlight"><%= f.submit "編集内容を保存する", class: "btn btn-sm btn-success" %></div>
          <div class="ms-auto bd-highlight"><%= link_to "退会する", withdraw_user_path(@user), class: "btn btn-sm btn-danger" %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>