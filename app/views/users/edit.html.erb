<%= render 'layouts/errors', obj: @user %>
<div class="container">
  <div class="row mt-3">
    <div class="col-3">
      <h2 class="title-text offset-2">プロフィール編集</h2>
    </div>
  </div>
  <%= form_with model:@user, local:true do |f| %>
    <div class="row d-flex justify-content-start mt-3">
      
      <div class="col-2 mt-2">
        <%= f.label :プロフィール画像, class: 'mt-1' %>
      </div>
      <div class="col-4 mt-2">
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="col-6"></div>

      <div class="col-2 mt-2">
        <%= f.label :ニックネーム, class: 'mt-1' %>
      </div>
      <div class="col-4 mt-2">
        <%= f.text_field :nickname, class: "form-control" %>
      </div>
      <div class="col-6"></div>

      <div class="col-2 mt-2">
        <%= f.label :メールアドレス, class: 'mt-1' %>
      </div>
      <div class="col-4 mt-2">
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="col-6"></div>

      <div class="col-2 mt-2">
        <%= f.label :自己紹介文, class: 'mt-1' %>
      </div>
      <div class="col-4 mt-2">
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="col-6"></div>

      <div class="col-2"></div>
      <div class="col-4 mt-2">
        <div class="d-flex bd-highlight mb-3">
          <div class="bd-highlight"><%= f.submit "編集内容を保存する", class: "btn btn-sm btn-success" %></div>
          <div class="ms-auto bd-highlight"><%= link_to "退会する", unsubscribe_path(@user), class: "btn btn-sm btn-danger" %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>